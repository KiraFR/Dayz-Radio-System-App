{
  "name": "radio-voip-electron",
  "version": "1.0.0",
  "description": "Electron shell for Radio VoIP DayZ",
  "author": "Stalker NoName",
  "main": "main.cjs",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.dayz.radio-voip",
    "productName": "Radio VoIP DayZ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "RadioVoIP-DayZ.exe"
    }
  }
}
