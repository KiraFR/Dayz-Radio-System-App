{
  "name": "radio-voip-electron",
  "version": "1.0.1",
  "description": "Electron shell for Radio VoIP DayZ",
  "author": "Stalker NoName",
  "main": "main.cjs",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.dayz.radio-voip",
    "productName": "Radio VoIP DayZ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!__tests__",
      "!coverage",
      "!*.test.js"
    ],
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "portable": {
      "artifactName": "RadioVoIP-DayZ.exe"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "*.cjs",
      "*.js",
      "!titlebar.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
