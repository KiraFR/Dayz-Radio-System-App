{
  "name": "radio-voip-electron",
  "version": "1.0.2",
  "description": "Electron shell for Radio VoIP DayZ",
  "author": "Kira",
  "main": "src/main/index.cjs",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.dayz.radio-voip",
    "productName": "Radio VoIP DayZ",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      ".env",
      "!**/*.test.js"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "RadioVoIP-DayZ.exe"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.cjs",
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
